{
  "name": "livepeer-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "prestart": "npm run -s build",
    "start": "node dist",
    "test": "eslint src",
    "build": "babel src -s -D -d dist --presets es2015,stage-0"
  },
  "dependencies": {
    "@livepeer/sdk": "1.0.0-alpha.5",
    "app-root-path": "2.1.0",
    "axios": "0.18.0",
    "body-parser": "1.18.3",
    "dotenv": "7.0.0",
    "express": "4.16.4",
    "lokka": "1.7.0",
    "lokka-transport-http": "1.6.1",
    "morgan": "1.9.1",
    "node-fetch": "^2.3.0",
    "promise": "^8.0.2",
    "redis": "2.8.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "eslint": "5.8.0",
    "nodemon": "1.18.5",
    "rimraf": "2.6.2"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "prefer-arrow-callback": "error",
      "no-unused-vars": "error"
    }
  }
}
